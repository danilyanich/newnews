{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base/legacy",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "curly": [
            "error",
            "multi-or-nest"
        ],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "quote-props": [
            "error",
            "consistent"
        ],
        "no-param-reassign": [
            "error",
            { "props": false }
        ],
        "no-unused-vars": [
            "warn"
        ],
        "no-undef": [
            "warn"
        ],
        "no-unused-expressions": [
            "error",
            { "allowShortCircuit": true }
        ]
    }
}
